{
  "compilerOptions": {
    "target": "ES6",                  // Génère du code compatible ES6
    "module": "ES6",                  // Utilise le format de module ECMAScript
    "outDir": "./dist",               // Dossier de sortie
    "rootDir": "./src",               // Dossier source
    "moduleResolution": "node",       // Résolution des modules
    "esModuleInterop": true,          // Améliore la compatibilité avec les modules CommonJS
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],            // Inclut tous les fichiers TypeScript dans `src`
  "exclude": ["node_modules"]         // Exclut `node_modules`
}
